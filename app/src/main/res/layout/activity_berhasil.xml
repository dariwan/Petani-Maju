<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.shop.BerhasilActivity"
    android:background="@color/cream">


    <ImageView
        android:id="@+id/alert"
        android:layout_width="242dp"
        android:layout_height="242dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="84dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/ikon" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/alert"
        android:text="Your order has been successfully placed."
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/alert" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Please collect your order at the provided address."
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_below="@+id/textView9"
        android:text="Thank you for choosing us, and we look forward to serving you again in the future. Have a wonderful day!"
        android:textStyle="bold"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="70dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/button1"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView10"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:backgroundTint="@color/yelow"
        android:text="SEE MY ORDER"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</RelativeLayout>